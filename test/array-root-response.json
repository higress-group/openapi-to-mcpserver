{
  "openapi": "3.0.3",
  "info": {
    "title": "Array Root Response Test API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "Get users list",
        "description": "Retrieve a list of users (returns array directly)",
        "responses": {
          "200": {
            "description": "Successful response with array",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "User ID"
                      },
                      "name": {
                        "type": "string",
                        "description": "User name"
                      },
                      "email": {
                        "type": "string",
                        "description": "User email"
                      }
                    },
                    "required": ["id", "name"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tags": {
      "get": {
        "summary": "Get tags list",
        "description": "Retrieve a list of tags (returns array of strings)",
        "responses": {
          "200": {
            "description": "Successful response with string array",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "summary": "Get user by ID",
        "description": "Retrieve a single user (returns object)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "User ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "User ID"
                    },
                    "name": {
                      "type": "string",
                      "description": "User name"
                    }
                  },
                  "required": ["id", "name"]
                }
              }
            }
          }
        }
      }
    }
  }
}

